<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_ulcBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="?attr/actionModeCloseDrawable"
                android:background="#673AB7" />

            <TextView
                android:id="@+id/tv_main7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="로그 확인"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibtn_ulcmypage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#673AB7"
                android:padding="7dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/person" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/infoes"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#CDE6E5E5"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="16dp"
                android:text="해당 정보 기록"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dateInfo1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="16dp"
                android:text="날짜를 선택하시오."
                android:textColor="#737272"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dateInfo2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="16dp"
                android:text=""
                android:textColor="#737272"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>